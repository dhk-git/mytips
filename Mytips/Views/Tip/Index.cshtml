@model IEnumerable<Mytips.Models.TipModel.TipGroupModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Tip Group</h1>

<div class="text-right">
    <a class="btn btn-success" asp-action="CreateGroup" asp-route-parentTipGroupId="0">Create Root</a>
</div>
<br />
<table class="table table-striped table-sm">
    <thead>
        <tr class="d-none d-sm-table-row">
            <th>
                @Html.DisplayNameFor(model => model.TIP_GROUP_ID)
            </th>
            @*<th>
            @Html.DisplayNameFor(model => model.PARENT_TIP_ID)
        </th>*@
            <th>
                @Html.DisplayNameFor(model => model.TIP_GROUP_NAME)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.REMARK)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SORT_NO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CREATE_DTTM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UPDATE_DTTM)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr style="cursor:pointer" onclick="location.href='@Url.Content("~/Tip/SelectTipList?tipGroupId=")@item.TIP_GROUP_ID'">
            <td class="d-none d-sm-table-cell">
                @Html.DisplayFor(modelItem => item.TIP_GROUP_ID)
            </td>
            @*<td>
            @Html.DisplayFor(modelItem => item.PARENT_TIP_ID)
        </td>*@
            <td style="padding-left:@(item.LEVEL * 10)px">@Html.DisplayFor(modelItem => item.TIP_GROUP_NAME)</td>
            <td class="d-none d-sm-table-cell">@Html.DisplayFor(modelItem => item.REMARK)</td>
            <td  class="d-none d-sm-table-cell">
                @Html.DisplayFor(modelItem => item.SORT_NO)
            </td>
            <td class="d-none d-sm-table-cell">
                <span>@Html.DisplayFor(modelItem => item.CREATE_DTTM)</span>
            </td>
            <td class="d-none d-sm-table-cell">
                @Html.DisplayFor(modelItem => item.UPDATE_DTTM)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "EditGroup", new { tipGroupId = item.TIP_GROUP_ID }) |
                @Html.ActionLink("Delete", "DeleteGroup", new { tipGroupId = item.TIP_GROUP_ID }) |
                @Html.ActionLink("CreateChild", "CreateGroup", new { parentTipGroupID = item.TIP_GROUP_ID })*@

                <a class="btn btn-success btn-sm" asp-action="EditGroup" asp-route-tipGroupId="@item.TIP_GROUP_ID">Edit</a>
                <a class="btn btn-info btn-sm" asp-action="DeleteGroup" asp-route-tipGroupId="@item.TIP_GROUP_ID" onclick="return confirm('Delete?')">Del</a>
                <a class="btn btn-primary btn-sm" asp-action="CreateGroup" asp-route-parentTipGroupId="@item.TIP_GROUP_ID">Child</a>

            </td>
        </tr>
}
    </tbody>
</table>
