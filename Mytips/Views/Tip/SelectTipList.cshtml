@model IEnumerable<Mytips.Models.TipModel.TipModel>

@{
    ViewData["Title"] = "TipList";
}

<h1>Tip List</h1>
<div class="row">
    <div class="col-6"><a class="btn btn-info" asp-action="Index">TipGroup</a></div>
    <div class="col-6 text-right">
        <a class="btn btn-success" asp-action="CreateTip" asp-route-tipGroupId="@ViewBag.tipGroupId">Create Tip</a>
    </div>
</div>
<br />
<table class="table table-striped table-sm">
    <thead>
        <tr class="d-none d-sm-table-row">
            <th class="d-none">
                @Html.DisplayNameFor(model => model.TIP_ID)
            </th>
            <th class="d-none">
                @Html.DisplayNameFor(model => model.TIP_GROUP_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TIP_TITLE)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.TIP_CONTENT)
            </th>
            <th class="d-none">
                @Html.DisplayNameFor(model => model.TIP_CONTENT_FILE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.REMARK)
            </th>
            <th class="d-none">
                @Html.DisplayNameFor(model => model.SORT_NO)
            </th>
            <th class="d-none">
                @Html.DisplayNameFor(model => model.DEL_FLAG)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CREATE_DTTM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UPDATE_DTTM)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="d-none">
                @Html.DisplayFor(modelItem => item.TIP_ID)
            </td>
            <td class="d-none">
                @Html.DisplayFor(modelItem => item.TIP_GROUP_ID)
            </td>
            <td>
                <div>@Html.DisplayFor(modelItem => item.TIP_TITLE)</div>
                <div class="d-block d-sm-none" style="white-space: pre-line">Content : @Html.DisplayFor(modelItem => item.TIP_CONTENT)</div>
                <div class="d-block d-sm-none">UpdateDttm : @Html.DisplayFor(modelItem => item.UPDATE_DTTM)</div>
            </td>
            <td class="d-none d-sm-table-cell">
                <span style="white-space: pre-line">@Html.DisplayFor(modelItem => item.TIP_CONTENT)</span>
            </td>
            <td class="d-none">
                @Html.DisplayFor(modelItem => item.TIP_CONTENT_FILE)
            </td>
            <td class="d-none d-sm-table-cell">
                @Html.DisplayFor(modelItem => item.REMARK)
            </td>
            <td class="d-none">
                @Html.DisplayFor(modelItem => item.SORT_NO)
            </td>
            <td class="d-none">
                @Html.DisplayFor(modelItem => item.DEL_FLAG)
            </td>
            <td class="d-none d-sm-table-cell">
                @Html.DisplayFor(modelItem => item.CREATE_DTTM)
            </td>
            <td class="d-none d-sm-table-cell">
                @Html.DisplayFor(modelItem => item.UPDATE_DTTM)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
